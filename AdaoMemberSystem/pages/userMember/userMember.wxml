<import src="../../wxParse/wxParse.wxml"/>

<view class='page-title' style='top: {{statusBarHeight}}px;'>
  <image wx:if='{{cookieLoading || authLoading || sportLoading}}' class='page-title-icon' src="../../imgs/loading.gif" />
  {{popupMenuOpenData.menuList[pageIndex].name}}
  <image wx:if='{{cookieLoading || authLoading || sportLoading}}' class='page-title-icon page-title-icon-right' src="../../imgs/loading.gif" />
</view>

<cookieManager 
  wx:if='{{pageIndex==0}}'
  loadCookie="{{startLoadCookies}}"
  top="{{statusBarHeight}}"
  bindstartload="onLoadStart"
  bindendload="onLoadEnd">>
</cookieManager>

<authManager
  wx:if='{{pageIndex==1}}'
  loadAuth="{{startLoadAuth}}"
  top="{{statusBarHeight}}"
  bindstartload="onLoadStart"
  bindendload="onLoadEnd">>
</authManager>

<passwdManager wx:if='{{pageIndex==2}}' top="{{statusBarHeight}}"></passwdManager>

<sportManager
  wx:if='{{pageIndex==3}}'
  loadSport="{{startLoadSport}}"
  top="{{statusBarHeight}}"
  bindstartload="onLoadStart"
  bindendload="onLoadEnd">
</sportManager>

<leftMenu data="{{popupMenuOpenData}}" bindpagechanged="onChangePage"></leftMenu>

