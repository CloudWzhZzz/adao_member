<import src="../../wxParse/wxParse.wxml"/>

<title text='{{popupMenuOpenData.menuList[pageIndex].name}}' top='{{statusBarHeight}}' loading='{{cookieLoading || authLoading || sportLoading}}'></title>
<cookieManager
  hide='{{pageIndex==0}}'
  loadCookie="{{startLoadCookies}}"
  top="{{statusBarHeight}}"
  bindstartload="onLoadStart"
  bindendload="onLoadEnd">>
</cookieManager>

<authManager
  hide='{{pageIndex==1}}'
  loadAuth="{{startLoadAuth}}"
  top="{{statusBarHeight}}"
  bindstartload="onLoadStart"
  bindendload="onLoadEnd">>
</authManager>

<passwdManager hide='{{pageIndex==2}}' top="{{statusBarHeight}}"></passwdManager>

<sportManager
  hide='{{pageIndex==3}}'
  loadSport="{{startLoadSport}}"
  top="{{statusBarHeight}}"
  bindstartload="onLoadStart"
  bindendload="onLoadEnd">
</sportManager>

<wifeList
  wx:if='{{pageIndex==4}}'
  top="{{statusBarHeight}}"
  loadWife="{{startLoadWife}}"
  bindstartload="onLoadStart"
  bindendload="onLoadEnd">
</wifeList>

<leftMenu data="{{popupMenuOpenData}}" bindpagechanged="onChangePage"></leftMenu>

